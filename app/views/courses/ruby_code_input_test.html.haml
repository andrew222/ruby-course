.code_input
	= text_area :code, :text

:javascript
	$(document).ready(function(){
		$('#code_text').focus();
		$('#code_text').bind("keypress", function(e){
			var me = $(this);
			if(e.which == 13){
				$.ajax({
					type: "POST",
		      url: "/excute_code.json",
		      data: { code: me.val() },
		      dataType: "json",
		      beforeSend: function(){
		      	console.log("before send data");
		      },
		      success: function(data) {
		        console.log(data.result);
		        me.val(me.val() + data.result + "\n");
		      },
					error: function(error){
						console.log(error);
					}
				})
			}
		})
	})